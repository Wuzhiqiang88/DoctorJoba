/* pages/home/searchDrug/searchDrug.wxss */
@import "/template/template.wxss";
.typetitle{
  background-color: white;
  padding: 30rpx;
  font-size: 14pt;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gainsboro;
}
.backimg{
  margin-top: -2rpx;
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}
.backimg image{
  width: 45rpx;
  height: 45rpx;
}
.searchbytitle{
  background-color: white;
  padding: 30rpx;
  font-size: 14pt;
  font-weight: bold;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.weui-cell{
  padding:15px 15px; 
}
page, .page, .page__bd {
  height: 100%;
  background-color: #fff;
  position: relative;
}
.wxSearch{
  position: absolute;
  top: 43px;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(200, 200, 200, 0.1);
  z-index: 9999;
}

/** 搜索框下面的提示区域 */
.wxSearchInner{
  background-color: #fff;
  position: absolute;
  left: 20rpx;
  z-index: 999;
  width: 84%;
  border: 1px solid #eee;
}

/** 搜索热点标题 */
.wxSearchTitle{
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 13px;
  text-align: left;
}

/** 提示样式 */
.wxSearchMindKeyItem{
  padding: 10px 5px 10px 15px;
  margin-left: 10px;
  
  display: flex;
  font-size: 13px;
}

/** 标签样式 */
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
  margin-left: 25rpx;
}

/** 标签样式 */
.wxSearchKeyItem{
  flex: 0 0 18%;
  font-size: 13px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px;
  padding: 4px 5px 4px 5px;
  border-radius: 0px;
  background-color: rgba(200, 200, 200, 0.1);
}

/** 搜索记录标题栏 */
.wxSearchHistoryItem{
  padding-left: 10px;
  padding-top: 10px;
  padding-right: 5px;
  padding-bottom: 5px;
  display: flex;
}

/** 搜索记录标题 */
.wxSearchHistoryItemTitle{
  flex: 8;
  font-size: 13px;
}

/** 搜索记录删除按钮 */
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 13px;
  text-align: center;
  padding-top:2px;
  padding-bottom: 2px;
  border: 1px solid #eee;
  border-radius: 2px;
}
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d7d6dc;
  background-color: #28b7a3;
  border-top: 0rpx;
}

.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
  margin-top: 3rpx;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
  padding: 5rpx;
  height: 55rpx;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  white-space: nowrap;
  margin-top: 5rpx;
  color: white;
}
.advice{
  font-size: 9pt;
  color: red;
  
}
.drugtitle{
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  padding-left: 30rpx;
  font-size: 13pt;
  border-bottom: 1rpx solid gainsboro;
  display: flex;
  justify-content: space-between;
}
.advicediv{
  display: flex;
  flex-direction: row;
  padding-right: 30rpx;
}
.advicediv image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}.notfind{
  font-size: 12pt;
  padding: 30rpx;
  color: #999;
}